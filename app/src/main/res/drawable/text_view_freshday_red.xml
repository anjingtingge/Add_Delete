<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle表示为矩形 -->

    <!-- 填充的颜色 -->
    <solid android:color="@color/red" />


    <size android:width="40px"
        android:height="18px" />
    <!-- android:radius 圆角的半径 -->
    <corners
        android:topLeftRadius="9px"
        android:topRightRadius="9px"
        android:bottomRightRadius="9px"
        android:bottomLeftRadius="9px"
        />

</shape>
